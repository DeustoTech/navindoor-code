function line(nodes,varargin)
%LINE Summary of this function goes here
%   Detailed explanation goes here
    mt = vec2mat([nodes.r],3);
    
    i = 0;
    for inode = nodes
        i = i + 1;
            switch class(inode)
                case 'elevator'
                        text(mt(i,1)+1,mt(i,2),['ele-',num2str(i)],'FontSize',10,'Parent',);
                case 'stairs'
                        text(mt(i,1)+1,mt(i,2),['sta-',num2str(i)],'FontSize',10);
                case 'beacon'
                        text(mt(i,1)+1,mt(i,2),['AP-',num2str(i)],'FontSize',10);

            end
            line(inode.r(1),inode.r(2),varargin{:})
            
        if inode.select
            line(inode.r(1),inode.r(2),varargin{:},'Marker','o','MarkerSize',15,'MarkerFaceColor','none','MarkerEdgeColor','red','LineWidth',3)
        end
    end
end

